{
  "name": "sentinelfs-gui",
  "version": "1.0.0",
  "description": "Modern Desktop GUI for SentinelFS",
  "author": "SentinelFS Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/reicalasso/SentinelFS.git"
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "vite build && tsc"
  },
  "dependencies": {
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0",
    "recharts": "^2.10.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.sentinelfs.gui",
    "productName": "SentinelFS",
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "desktop": {
        "Name": "SentinelFS",
        "Comment": "Secure Distributed File System",
        "Categories": "Utility;FileTools;Network;",
        "StartupWMClass": "SentinelFS"
      },
      "executableName": "sentinelfs"
    },
    "appImage": {
      "license": "../LICENSE",
      "synopsis": "Secure Delta-Sync File System with GUI and Daemon"
    },
    "extraResources": [
      {
        "from": "../build_release/app/daemon/sentinel_daemon",
        "to": "bin/sentinel_daemon"
      },
      {
        "from": "../build_release/app/cli/sentinel_cli",
        "to": "bin/sentinel_cli"
      },
      {
        "from": "../build_release/core/libsentinel_core.so",
        "to": "lib/libsentinel_core.so"
      },
      {
        "from": "../build_release/plugins",
        "to": "lib/plugins",
        "filter": ["**/*.so"]
      },
      {
        "from": "../config/sentinel.conf",
        "to": "config/sentinel.conf"
      }
    ],
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    }
  }
}
