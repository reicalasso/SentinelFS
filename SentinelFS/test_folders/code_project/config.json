{
  "app": {
    "name": "SampleAPI",
    "version": "1.0.0",
    "environment": "development"
  },
  "server": {
    "host": "0.0.0.0",
    "port": 5000,
    "workers": 4,
    "timeout": 30
  },
  "database": {
    "type": "postgresql",
    "host": "localhost",
    "port": 5432,
    "name": "sample_db",
    "pool_size": 10
  },
  "redis": {
    "host": "localhost",
    "port": 6379,
    "db": 0
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "/var/log/sample_api.log"
  },
  "security": {
    "jwt_secret": "CHANGE_ME_IN_PRODUCTION",
    "token_expiry": 3600,
    "rate_limit": 100
  }
}
